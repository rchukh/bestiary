{
  "provisioners" : [
    {
      "type": "shell",
      "environment_vars": [
        "FLUENTD_HOST={{user `fluentd_host`}}",
        "FLUENTD_PORT={{user `fluentd_port`}}",
        "FLUENTD_SECRET={{user `fluentd_secret`}}"
      ],
      "scripts": [
        "../../../vm/centos/mutation/runtimes/java/corretto_11.sh",
        "mutation/presto.sh",
        "mutation/presto/jmx_agent.sh",
        "mutation/presto/monit.sh",
        "mutation/presto/presto-querylog.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "vagrant",
      "communicator": "ssh",
      "source_path": "rchukh/bestiary-centos",
      "box_version": "2.0.0",
      "provider": "virtualbox",
      "box_name": "bestiary-prestosql-{{timestamp}}",
      "skip_add": true,
      "skip_package": true,
      "teardown_method": "destroy"
    }
  ]
}
