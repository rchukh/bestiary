{
    "variables": {
      "gcp_account_file": "{{env `GOOGLE_CLOUD_KEYFILE_JSON`}}",
      "gcp_project_id": "",
      "gcp_zone": "europe-west1-d"
    },
    "provisioners": [
      {
        "type": "shell",
        "scripts": [
            "../../../vm/centos/mutation/runtimes/java/corretto_11.sh",
            "mutation/trino.sh",
            "mutation/trino/jmx_agent.sh",
            "mutation/trino/monit.sh",
            "mutation/trino/trino-querylog.sh"
        ]
      }
    ],
    "builders": [
      {
        "type": "googlecompute",
        "account_file": "{{user `gcp_account_file`}}",
        "project_id": "{{user `gcp_project_id`}}",
        "zone": "{{user `gcp_zone`}}",
        "use_internal_ip": false,
        "ssh_username": "packer",

        "source_image_family": "bestiary-linux",

        "image_name" : "bestiary-trino-{{timestamp}}",
        "image_family" : "bestiary-executors",
        "image_description" : "Bestiary Trino - Build {{timestamp}}"
      }
    ]
  }